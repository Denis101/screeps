{
    "compilerOptions": {
        "module": "esnext",
        "lib": ["esnext"],
        "target": "es2017",
        "moduleResolution": "Node",
        "outDir": "dist",
        "baseUrl": "src/",
        "sourceMap": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
    },
    "exclude": [
        "node_modules"
    ]
}
